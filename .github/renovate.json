{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", "npm:unpublishSafe"],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Ludos Renovate Dependency Dashboard",
  "gitAuthor": "ludos-renovate[bot] <178999943+ludos-renovate[bot]@users.noreply.github.com>",
  "branchPrefix": "github-renovate/",
  "automerge": true,
  "platformAutomerge": true,
  "automergeSchedule": ["at any time"],
  "rebaseWhen": "behind-base-branch",
  "forkProcessing": "disabled",
  "prCreation": "immediate",
  "ignoreTests": false,
  "automergeType": "pr",
  "lockFileMaintenance": { "enabled": true },
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "enabledManagers": ["nvm", "npm", "github-actions", "dockerfile", "gradle", "gradle-wrapper"],
  "github-actions": { "automerge": true },
  "dockerfile": { "automerge": true },
  "postUpgradeTasks": {
    "commands": ["cd server && ./gradlew dependencies --write-locks"],
    "fileFilters": ["gradle.lockfile", "server/gradle.lockfile"],
    "executionMode": "branch"
  },
  "minimumReleaseAge": "3 days",
  "internalChecksFilter": "strict",
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "enabled": true,
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": ["*"]
    },
    {
      "groupName": "Renovate",
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchDepNames": ["ghcr.io/renovatebot/base-image"]
    },
    {
      "groupName": "tiptap",
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": ["/^@tiptap//"]
    },
    {
      "groupName": "Spring Boot",
      "matchPackageNames": ["org.springframework.boot"],
      "enabled": false
    },
    {
      "groupName": "logstash",
      "matchPackageNames": ["net.logstash.logback"],
      "enabled": false
    },
    {
      "groupName": "Vite",
      "matchPackageNames": ["vite"],
      "matchUpdateTypes": ["minor", "patch"]
    }
  ],
  "prConcurrentLimit": 10
}
