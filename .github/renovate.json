{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Ludos Renovate Dependency Dashboard",
  "gitAuthor": "ludos-renovate[bot] <178999943+ludos-renovate[bot]@users.noreply.github.com>",
  "branchPrefix": "github-renovate/",
  "automerge": true,
  "platformAutomerge": true,
  "automergeSchedule": ["at any time"],
  "rebaseWhen": "behind-base-branch",
  "forkProcessing": "disabled",
  "prCreation": "immediate",
  "ignoreTests": false,
  "automergeType": "pr",
  "enabledManagers": ["nvm", "npm", "github-actions", "dockerfile", "gradle", "gradle-wrapper"],
  "github-actions": { "automerge": true },
  "dockerfile": { "automerge": true },
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "enabled": true,
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": ["*"]
    },
    {
      "groupName": "Renovate",
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchDepNames": ["ghcr.io/renovatebot/base-image"]
    },
    {
      "groupName": "Node",
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchManagers": ["nvm", "npm"],
      "matchPackageNames": ["@types/node", "node"],
      "matchFileNames": [".nvmrc"]
    },
    {
      "groupName": "React",
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchManagers": ["npm"],
      "matchPackageNames": ["react", "react-dom", "@types/react", "@types/react-dom"]
    },
    {
      "groupName": "Playwright",
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": ["playwright-chromium", "@playwright/test", "mcr.microsoft.com/playwright"]
    },
    {
      "groupName": "eslint",
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["eslint"]
    },
    {
      "groupName": "AWS CDK",
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": ["aws-cdk", "aws-cdk-lib"]
    },
    {
      "groupName": "tiptap",
      "automerge": true,
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": ["/^@tiptap//"]
    },
    {
      "groupName": "Spring Boot",
      "matchPackageNames": ["org.springframework.boot"],
      "enabled": false
    },
    {
      "groupName": "logstash",
      "matchPackageNames": ["net.logstash.logback"],
      "enabled": false
    }
  ],
  "prConcurrentLimit": 10
}
