{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Ludos Renovate Dependency Dashboard",
  "gitAuthor": "ludos-renovate[bot] <178999943+ludos-renovate[bot]@users.noreply.github.com>",
  "branchPrefix": "github-renovate/",
  "platformAutomerge": true,
  "forkProcessing": "disabled",
  "prCreation": "immediate",
  "ignoreTests": false,
  "automergeType": "pr",
  "enabledManagers": [
    "nvm",
    "npm",
    "github-actions",
    "dockerfile",
    "gradle",
    "gradle-wrapper"
  ],
  "github-actions": {"automerge": true},
  "dockerfile": {"automerge": true},
  "packageRules": [
    {
      "matchManagers": ["npm"],
      "enabled": true,
      "automerge": true,
      "versioning": "node",
      "matchPackageNames": ["*"]
    },
    {
      "groupName": "Renovate",
      "matchDepNames": ["ghcr.io/renovatebot/base-image"]
    },
    {
      "groupName": "Node",
      "matchManagers": ["nvm", "npm"],
      "matchPackageNames": ["@types/node", "node"],
      "matchFileNames": [".nvmrc"]
    },
    {"groupName": "Gradle", "matchManagers": ["gradle", "gradle-wrapper"]},
    {
      "groupName": "React",
      "matchManagers": ["npm"],
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "Playwright",
      "matchPackageNames": [
        "playwright-chromium",
        "@playwright/test",
        "mcr.microsoft.com/playwright"
      ]
    },
    {"groupName": "AWS CDK", "matchPackageNames": ["aws-cdk", "aws-cdk-lib"]},
    {"groupName": "tiptap", "matchPackageNames": ["/^@tiptap//"]}
  ],
  "prConcurrentLimit": 10
}